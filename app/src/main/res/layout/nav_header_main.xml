<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:background="@mipmap/top_left_bg"
              android:orientation="vertical"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dimens10"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ripple_round_channel"
            android:padding="20dip"
            android:src="@mipmap/ic_bluetooth_not_connected_24dp"
            android:tint="@color/material_color_4" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens45">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:backgroundImage="@mipmap/pic_hy"
            fresco:placeholderImage="@mipmap/pic_hy"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="0dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="jack chen"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens16"/>

    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/dimens30"
        android:gravity="right"
        android:onClick="onExit"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens16"/>
</LinearLayout>
