package com.wyzk.lottery.video.utils;

import android.text.TextUtils;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;

/**
 * Created by zhangb2 on 17.9.21.
 */

public class UserMediaStatus {

    private Map<String, String> mUserMediaStates = new HashMap<String, String>();

    //添加或更新该用户的状态信息
    public void putUserState(String userId, String state) {
        if (TextUtils.isEmpty(userId) || TextUtils.isEmpty(state)) {
            return;
        }
        mUserMediaStates.put(userId, state);
    }

    public void removeUserState(String userId) {
        if (TextUtils.isEmpty(userId)) {
            return;
        }
        //移除该用户的状态信息
        mUserMediaStates.remove(userId);
    }

    public String getUserStates() {
        StringBuilder statesStr = new StringBuilder();

        Iterator<Map.Entry<String, String>> it = mUserMediaStates.entrySet().iterator();
        while (it.hasNext()) {
            Map.Entry<String, String> item = it.next();
            String state = item.getValue();
            statesStr.append(state).append("\n\n");
        }
        return statesStr.toString();
    }

    public void clear() {
        mUserMediaStates.clear();
    }
}
