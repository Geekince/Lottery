<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens40"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message"
        android:layout_marginRight="@dimen/dimens5"
        android:layout_marginTop="@dimen/dimens2"
        android:background="@drawable/top_time_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dimens3"
            android:paddingRight="@dimen/dimens3"
            android:text="剩余押注时间\nTIME"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens12"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/top_time_text"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/zero_second"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens22"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>