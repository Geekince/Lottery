<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens30"
        android:background="@mipmap/top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens3"
            android:background="@mipmap/top_time_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimens3"
            android:paddingLeft="@dimen/dimens5"
            android:paddingRight="@dimen/dimens8"
            android:paddingTop="@dimen/dimens3"
            android:text="2018-01-09 09:50:50"
            android:textColor="@color/pull_top_text_color" />


        <com.wyzk.lottery.view.MarqueeView
            android:id="@+id/adv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:direction="left"
            app:isRepeat="true"
            app:speed="40"
            app:startPoint="end"
            app:textSize="@dimen/dimens13"
            app:textcolor="@color/pull_top_text_color" />

        <TextView
            android:id="@+id/serial_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens3"
            android:background="@mipmap/top_time_bg"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dimens3"
            android:paddingLeft="@dimen/dimens5"
            android:paddingRight="@dimen/dimens8"
            android:paddingTop="@dimen/dimens3"
            android:text="流水号：38711444"
            android:textColor="@color/pull_top_text_color" />
    </LinearLayout>

</LinearLayout>