<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:visibility="visible">


        <com.wangsu.wsrtc.sdk.WSSurfaceView
            android:id="@+id/surface_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />


        <android.support.design.widget.AppBarLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="直播"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens18" />

                <TextView
                    android:id="@+id/tv_serial_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="局号:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens18" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/dimens5"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="闲"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />


                <ImageView
                    android:id="@+id/iv_discern_player_3"
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_discern_player_1"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:id="@+id/iv_discern_player_2"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bank_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="庄"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />

                <ImageView
                    android:id="@+id/iv_discern_banker_3"
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_discern_banker_1"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:id="@+id/iv_discern_banker_2"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.wyzk.lottery.view.CountDownView
            android:id="@+id/countDownView"
            android:layout_width="@dimen/dimens70"
            android:layout_height="@dimen/dimens70"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimens5"
            android:layout_marginLeft="@dimen/dimens5"
            app:progressTextColor="@color/red"
            app:ringColor="@color/material_color_8"
            app:ringWidth="10" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bjl_311"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/l_bet8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rect_position_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bet8_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="250/1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_bet8_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="任意对子"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_bet8_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1:6"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_bet3"
                android:layout_width="0dp"
