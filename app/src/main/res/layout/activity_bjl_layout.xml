<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="经典百家乐"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens18" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_stuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens10"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_position"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_position_xj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="闲"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />

                <ImageView
                    android:id="@+id/iv_xj_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_position_xj"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/mh_j"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_xj_third"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimens5">

                    <ImageView
                        android:id="@+id/iv_xj_first_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/mh_j" />

                    <ImageView
                        android:id="@+id/iv_xj_second_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/mh_j" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_position"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_position_zj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="庄"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />

                <ImageView
                    android:id="@+id/iv_zj_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_position_zj"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/mh_j"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_zj_third"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimens5">

                    <ImageView
                        android:id="@+id/iv_zj_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/mh_j" />

                    <ImageView
                        android:id="@+id/iv_zj_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/mh_j" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bet_xd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bet_tie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bet_zd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bet_xbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bet_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bet_zbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_bet_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_bet_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_bet_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/silver_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens40"
                android:background="@color/silver_1">

                <TextView
                    android:id="@+id/tv_xj_dui"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="闲对 1 : 11" />

                <TextView
                    android:id="@+id/tv_tie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="和" />

                <TextView
                    android:id="@+id/tv_zj_dui"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="庄对 1 : 11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens40"
                android:background="@color/silver_1">

                <TextView
                    android:id="@+id/tv_xian_bao_long"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="闲宝龙" />

                <TextView
                    android:id="@+id/tv_blank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="庄" />

                <TextView
                    android:id="@+id/tv_zhuang_bao_long"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="庄宝龙" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens40"
                android:background="@color/silver_1">

                <TextView
                    android:id="@+id/tv_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="大 1 : 0.5" />

                <TextView
                    android:id="@+id/tv_xian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="闲" />

                <TextView
                    android:id="@+id/tv_small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rect"
                    android:gravity="center"
                    android:text="小 1:1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimens10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/yishi"
                    android:layout_width="@dimen/money_icon_dimen"
                    android:layout_height="@dimen/money_icon_dimen"
                    android:background="@drawable/yishi" />

                <Button
                    android:id="@+id/wushi"
                    android:layout_width="@dimen/money_icon_dimen"
                    android:layout_height="@dimen/money_icon_dimen"
                    android:layout_marginLeft="@dimen/dimens20"
                    android:background="@drawable/wushi" />

                <Button
                    android:id="@+id/yibai"
                    android:layout_width="@dimen/money_icon_dimen"
                    android:layout_height="@dimen/money_icon_dimen"
                    android:layout_marginLeft="@dimen/dimens20"
                    android:background="@drawable/yibai" />

                <Button
                    android:id="@+id/yik"
                    android:layout_width="@dimen/money_icon_dimen"
                    android:layout_height="@dimen/money_icon_dimen"
                    android:layout_marginLeft="@dimen/dimens20"
                    android:background="@drawable/yik" />

                <Button
                    android:id="@+id/yibaik"
                    android:layout_width="@dimen/money_icon_dimen"
                    android:layout_height="@dimen/money_icon_dimen"
                    android:layout_marginLeft="@dimen/dimens20"
                    android:background="@drawable/yibaik" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens40"
                android:layout_marginTop="@dimen/dimens20"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens40"
                    android:layout_weight="1"
                    android:background="@drawable/bg_submit"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_fapai"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens40"
                    android:layout_marginLeft="@dimen/dimens10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_submit"
                    android:gravity="center"
                    android:text="发牌"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens40"
                    android:layout_marginLeft="@dimen/dimens10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_submit"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
