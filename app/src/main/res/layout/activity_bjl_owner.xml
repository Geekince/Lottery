<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:visibility="visible">


        <com.wangsu.wsrtc.sdk.WSSurfaceView
            android:id="@+id/surface_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />


        <android.support.design.widget.AppBarLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:padding="@dimen/dimens5"
                    android:src="@mipmap/arrow_back" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="直播"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens18" />

                <TextView
                    android:id="@+id/tv_serial_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="流水号:125879"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens18" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens5"
            android:background="@drawable/rect"
            android:orientation="horizontal"
            android:padding="@dimen/dimens5"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="闲"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />


                <ImageView
                    android:id="@+id/iv_discern_player_3"
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_discern_player_1"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:id="@+id/iv_discern_player_2"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="庄"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />

                <ImageView
                    android:id="@+id/iv_discern_banker_3"
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_discern_banker_1"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:id="@+id/iv_discern_banker_2"
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimens5"
            android:background="@drawable/rect"
            android:orientation="horizontal"
            android:padding="@dimen/dimens5"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="闲"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />


                <ImageView
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bank_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="庄"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens20" />

                <ImageView
                    android:layout_width="@dimen/poke_with"
                    android:layout_height="@dimen/poke_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ht_2"
                    android:rotation="90" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens10"
                        android:background="@mipmap/ht_2" />

                    <ImageView
                        android:layout_width="@dimen/poke_with"
                        android:layout_height="@dimen/poke_height"
                        android:layout_marginLeft="@dimen/dimens5"
                        android:background="@mipmap/ht_2" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="识别结果" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="线上结果" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimens5"
            android:text="开始" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimens5"
            android:text="作废" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens20"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rp_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:gravity="center"
            android:text="1" />

        <RadioButton
            android:id="@+id/rp_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="2" />

        <RadioButton
            android:id="@+id/rp_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="3" />

        <RadioButton
            android:id="@+id/rp_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="4" />

        <RadioButton
            android:id="@+id/rp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="5" />

        <RadioButton
            android:id="@+id/rp_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="6" />
    </RadioGroup>
</LinearLayout>
