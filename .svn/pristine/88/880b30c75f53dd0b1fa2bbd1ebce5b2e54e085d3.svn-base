package com.wyzk.lottery.video.adapter;

import android.content.Context;
import android.support.v4.view.PagerAdapter;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;

public class ConfigPageAdapter extends PagerAdapter {
    private View[] mViewArray;
    private String[] mTitleArray;

    public ConfigPageAdapter(Context context, View[] viewArray, String[] titleArray) {
        this.mViewArray = viewArray;
        this.mTitleArray = titleArray;
    }

    public ConfigPageAdapter(Context context, int[] viewResArray, String[] titleArray) {
        LayoutInflater inflater = (LayoutInflater) context.getSystemService(Context.LAYOUT_INFLATER_SERVICE);

        this.mViewArray = new View[viewResArray.length];
        for (int i = 0; i < viewResArray.length; i++) {
            mViewArray[i] = inflater.inflate(viewResArray[i], null);
        }
        this.mTitleArray = titleArray;
    }

    @Override
    public int getItemPosition(Object object) {
        // TODO Auto-generated method stub
        return super.getItemPosition(object);
    }

    @Override
    public int getCount() {
        return mViewArray.length;
    }

    @Override
    public boolean isViewFromObject(View view, Object object) {
        return view == object;
    }

    @Override
    public Object instantiateItem(ViewGroup container, int position) {
        container.addView(mViewArray[position]);
        return mViewArray[position];
    }

    @Override
    public void destroyItem(ViewGroup container, int position, Object object) {
        container.removeView(mViewArray[position]);
    }

    @Override
    public CharSequence getPageTitle(int position) {
        return mTitleArray[position];
    }
}
