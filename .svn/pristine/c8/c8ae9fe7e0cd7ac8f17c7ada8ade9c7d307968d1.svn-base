<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/set_rate"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens18"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.wyzk.lottery.view.MyRadioGroup
        android:id="@+id/mygroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5"
            android:layout_marginRight="@dimen/dimens5"
            android:layout_marginTop="@dimen/dimens5"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ling"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/yi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/er"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/san"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3%"
                android:textSize="@dimen/dimens16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5"
            android:layout_marginRight="@dimen/dimens5"
            android:layout_marginTop="@dimen/dimens5"
            android:gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/si"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/wu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/liu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/qi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7%"
                android:textSize="@dimen/dimens16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens5"
            android:layout_marginRight="@dimen/dimens5"
            android:layout_marginTop="@dimen/dimens5"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ba"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/jiu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:id="@+id/shi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10%"
                android:textSize="@dimen/dimens16"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/dimens16"
                android:visibility="invisible"/>
        </LinearLayout>
    </com.wyzk.lottery.view.MyRadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens10"
        android:layout_marginRight="@dimen/dimens10"
        android:layout_marginTop="@dimen/dimens5"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义抽成比例："/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/red"
        android:onClick="submit"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens18"/>

</LinearLayout>